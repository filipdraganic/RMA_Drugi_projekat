<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/okvirzadugmice"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/imeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/daniVremeTV"
        android:gravity="start"

        />
    <TextView
        android:id="@+id/predavacTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imeTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ucionicaTV"
        app:layout_constraintTop_toBottomOf="@id/predavacTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grupeTV"
        app:layout_constraintTop_toBottomOf="@id/ucionicaTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daniVremeTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textStart"
        android:layout_marginRight="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>