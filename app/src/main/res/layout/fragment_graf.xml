<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.rs.raf.projekat2.filip_Draganic_RN542017.presentation.views.custom.SquareView
        android:id="@+id/squareView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prviTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/squareView"
            app:layout_constraintTop_toBottomOf="@id/squareView"

            />
        <TextView
            android:id="@+id/drugiTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/prviTV"
            app:layout_constraintTop_toBottomOf="@id/squareView"

            />
        <TextView
            android:id="@+id/treciTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/drugiTV"
            app:layout_constraintTop_toBottomOf="@id/squareView"

            />
        <TextView
            android:id="@+id/cetvrtviTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/treciTV"
            app:layout_constraintTop_toBottomOf="@id/squareView"

            />
        <TextView
            android:id="@+id/petiTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/cetvrtviTV"
            app:layout_constraintTop_toBottomOf="@id/squareView"

            />

</androidx.constraintlayout.widget.ConstraintLayout>