<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/blue" android:state_selected="true">

        <shape android:shape="rectangle">
            <corners
                android:radius="10dp"
                />
            <gradient
                android:startColor="@color/blue"
                android:endColor="#0090C8"

                />


        </shape>

    </item>


    <item>
        <layer-list >



            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"
                        />

                </shape>

            </item>

            <item android:gravity="bottom" android:right="1dp" android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"
                        />
                </shape>
            </item>

        </layer-list>


    </item>




</selector>